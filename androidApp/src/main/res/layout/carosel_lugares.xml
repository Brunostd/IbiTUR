<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCarrosel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewCarrosel"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/fazenda" />

        <TextView
            android:id="@+id/textLugaresCarrosel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="Gospel Fazenda Park"
            android:textColor="#4CAF50" />

        <TextView
            android:id="@+id/textLocalidadeCarrosel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableRight="@drawable/ic_baseline_location_on_24"
            android:gravity="center"
            android:padding="5dp"
            android:text="Local"
            android:textColor="#4CAF50" />
    </LinearLayout>
</androidx.cardview.widget.CardView>